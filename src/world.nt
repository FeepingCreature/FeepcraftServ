module world;

import drop;

class World {
  ubyte delegate(vec3i) genDg;
  class Chunk {
    vec3i pos;
    ubyte[] data;
    bool air() { for auto i <- int[]:data if i return false; return true; }
    int getIdx(vec3i local) {
      return local.y + 16 * (local.x + 16 * (local.z));
    }
  }
  Chunk[] chunks;
  Drop[] drops;
  void removeDrop(Drop d) {
    bool found;
    int i;
    while i < drops.length && !found {
      auto drop = drops[i];
      if (int:drop == int:d) {
        found = true;
        drop = drops.popEnd;
      } else i ++;
    }
    if !found raise new Error "Can't remove: no such drop! ";
  }
  void init(ubyte delegate(vec3i) dg) {
    genDg = dg;
  }
  // must be divisible by <16, 16, 16>
  Chunk lookupChunkAt(vec3i pos) {
    for auto chunk <- chunks
      if chunk.pos == pos
        return chunk;
    auto ch = new Chunk;
    ch.pos = pos;
    ubyte[auto~] data;
    for int y <- 0..16
      for int z <- 0..16
        for int x <- 0..16
          data ~= genDg(vec3i(x, y, z) + pos);
    ch.data = data[];
    chunks ~= ch;
    return ch;
  }
  byte lookupBlock(vec3i pos) {
    auto chunkPos = vec3i(pos.(x >> 4, y >> 4, z >> 4));
    auto chunkWorldPos = vec3i(chunkPos.(x << 4, y << 4, z << 4));
    auto chunk = lookupChunkAt chunkWorldPos;
    auto delta = pos - chunkWorldPos;
    writeln "lookupBlock $pos has $chunkPos and $chunkWorldPos and $delta";
    return chunk.data[chunk.getIdx(delta)];
  }
  void changeBlock(vec3i pos, byte newVal) {
    auto chunkPos = vec3i(pos.(x >> 4, y >> 6, z >> 4));
    auto chunkWorldPos = vec3i(chunkPos.(x << 4, y << 6, z << 4));
    auto chunk = lookupChunkAt chunkWorldPos;
    auto delta = pos - chunkWorldPos;
    chunk.data[chunk.getIdx(delta)] = newVal;
  }
}
