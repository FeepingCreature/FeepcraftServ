module base;

import std.socket;

alias abs-vec3i = vec3i; // absolute world pos

shared int eidCount;

void init() { eidCount = 1; }

interface IPlayer {
  string getName();
  Socket getSocket();
  void sendChatMessage(string);
  void readPacket();
  void removeSelf(bool quietly);
  void removeEntity(int eid);
}

template removeClassFrom(T) <<EOF
  void removeClassFrom(T t) {
    alias ar = *t[0];
    int i;
    while i < ar.length {
      if int:ar[i] == int:t[1] {
        if i == ar.length - 1 { ar = type-of ar: ar[0..$-1]; return; }
        
        ar[i] = ar.popEnd();
        return;
      }
      i++;
    }
    raise-error new Error "No $(t[1]) in $(t[0])!";
  }
EOF
